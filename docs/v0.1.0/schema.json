{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://verida.github.io/demo-credential-issuer/v0.1.0/schema.json",
  "name": "Credential Issuer ",
  "title": "Credential Issuer ",
  "titlePlural": "Credentials Issuer ",
  "description": "Credentials Issuer",
  "type": "object",
  "layouts": {
    "create": [
      "firstName",
      "lastName",
      "regNumber",
      "testTimestamp",
      "regExpDate"
    ],
    "view": [
      "firstName",
      "lastName",
      "regNumber",
      "testTimestamp",
      "regExpDate",
      "healthType"
    ]
  },
  "properties": {
    "firstName": {
      "title": "First Name",
      "type": "string"
    },
    "lastName": {
      "title": "Last Name",
      "type": "string"
    },
    "regNumber": {
      "title": "Registration Number",
      "type": "string"
    },
    "healthType": {
      "title": "Health professional type",
      "type": "string",
      "enum": [
        "Dentist",
        "Psychologist",
        "Optometrist",
        "Pharmacist",
        "Allied Health Professional"
      ]
    },
    "testTimestamp": {
      "title": "Test timestamp",
      "type": "string",
      "format": "date-time"
    },
    "regExpDate": {
      "title": "Registration Expiration Date",
      "type": "string",
      "format": "date",
      "description": "YYYY-MM-DD"
    }
  },
  "required": ["firstName", "lastName", "regNumber", "regExpDate", "healthType"]
}
